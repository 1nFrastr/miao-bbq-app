{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "启动后端服务",
            "type": "shell",
            "command": "source ./backend/venv/Scripts/activate && python ./backend/manage.py runserver",
            "group": "build",
            "isBackground": true,
            "problemMatcher": []
        },
        {
            "label": "启动小程序开发",
            "type": "shell",
            "command": "cd ./frontend-app && pnpm run dev:weapp",
            "group": "build",
            "isBackground": true,
            "problemMatcher": []
        },
        {
            "label": "启动管理端开发",
            "type": "shell",
            "command": "cd ./frontend-admin && pnpm run dev",
            "group": "build",
            "isBackground": true,
            "problemMatcher": []
        },
        {
            "label": "安装后端依赖",
            "type": "shell",
            "command": "source ./backend/venv/Scripts/activate && pip install -r ./backend/requirements.txt",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "运行数据库迁移",
            "type": "shell",
            "command": "source ./backend/venv/Scripts/activate && python ./backend/manage.py migrate",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "切换到MySQL数据库",
            "type": "shell",
            "command": "cd ./backend && cp .env.mysql .env && echo \"已切换到MySQL数据库配置\"",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "切换到SQLite数据库",
            "type": "shell",
            "command": "cd ./backend && cp .env.development .env && echo \"已切换到SQLite数据库配置（开发环境）\"",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "初始化MySQL数据库",
            "type": "shell",
            "command": "mysql -u root -p < ./backend/init_mysql.sql",
            "group": "build",
            "problemMatcher": []
        }
    ]
}